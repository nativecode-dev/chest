{
  "name": "@beard/chest",
  "description": "CHEST of me best tools, matey!",
  "bin": "./lib/chest.js",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "version": "0.0.0-development",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "prebuild": "yarn && yarn run clean && yarn run lint",
    "clean": "rimraf .cache && rimraf lib && rimraf artifacts",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "test": "cross-env DEBUG= nyc mocha --opts mocha.opts",
    "pretest": "yarn run build",
    "coveralls": "cross-env DEBUG= nyc report --reporter=text-lcov | coveralls",
    "release": "semantic-release",
    "prerelease": "yarn run build && bin-shebang",
    "setup": "sh setup.sh"
  },
  "dependencies": {
    "@nofrills/collections": "^3.2.0",
    "@nofrills/console": "^3.2.0",
    "@nofrills/fs": "^3.2.0",
    "@nofrills/lincoln-debug": "^3.2.0",
    "@nofrills/scrubs": "^3.2.0",
    "@nofrills/types": "^3.2.0"
  },
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "@nofrills/projector": "^4.0.0",
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.8",
    "bin-shebang": "^1.0.11",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.9.8",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-no-unused-expression-chai": "^0.1.3",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "src/**/*.spec.ts",
      "src/chest.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "instrument": true,
    "report-dir": ".cache/coverage",
    "reporter": "text",
    "sourceMap": true,
    "temp-directory": ".cache/nyc"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nativecode-dev/chest"
  }
}
