{
  "tasks": {
    "build": [
      "[clean]",
      "[lint]",
      "tsc --project tsconfig.json",
      "cli-shabang"
    ],
    "commit": [
      "git add -A . && npx git-cz"
    ],
    "configure": [
      "[configure:git]",
      "[configure:ssh]"
    ],
    "configure:doc": [
      "typedoc --mode modules --out ./doc ./packages/*/src/"
    ],
    "configure:git": [
      "git config --global user.email \"opensource+nofrills@nativecode.com\"",
      "git config --global user.name \"opensource\"",
      "git config --global push.default simple"
    ],
    "configure:ssh": [
      "bash set-up-ssh --key $encrypted_7baae619033b_key --iv $encrypted_7baae619033b_iv --path-encrypted-key deploy.enc"
    ],
    "configure:test": [
      "yarn install --cwd specs/data/single --pure-lockfile --silent",
      "yarn install --cwd specs/data/workspaces --pure-lockfile --silent",
      "yarn install --cwd specs/data/workspaces-lerna --pure-lockfile --silent"
    ],
    "clean": [
      "rimraf .cache",
      "rimraf lib"
    ],
    "lint": [
      "tslint --project tsconfig.json --config tslint.json"
    ],
    "release": [
      "semantic-release"
    ],
    "test": [
      "[configure:test]",
      "[build]",
      "cross-env DEBUG= nyc mocha --opts mocha.opts"
    ],
    "test:coverage": [
      "[test]",
      "cross-env DEBUG= nyc report --reporter=text-lcov | coveralls"
    ]
  }
}
